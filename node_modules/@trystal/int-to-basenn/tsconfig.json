{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true, 
    "declaration": false,
    "outDir": "."
  }  ,
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}